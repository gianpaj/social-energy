@font-face {
  font-family: 'Museo';
  src: url('/fonts/Museo300-Regular-webfont.eot');
  src: url('/fonts/Museo300-Regular-webfont.eot#iefix') format('embedded-opentype'),
       url('/fonts/Museo300-Regular-webfont.woff') format('woff'),
       url('/fonts/Museo300-Regular-webfont.ttf') format('truetype'),
       url('/fonts/Museo300-Regular-webfont.svg#webfont') format('svg');
}

h1
  color: white
  font-weight: 100
  font-size: 4em

h1,h2,h3,h4,h5,p
  font-family: "Museo", "Helvetica Neue", Helvetica, Arial, sans-serif

body

  header
    margin: 0 auto
    height: 80px
    background-color: #FFF
    border-top: 5px solid #46B252
    border-bottom: 2px solid #777
    position: fixed
    width: 100%
    z-index: 999

    a#home
      display: block
      text-indent: -9999px
      background-image: url("/images/social-energy.png")
      background-repeat: no-repeat
      background-size: 80%
      height: 100%
      width: 100px
      margin-left: 50px
      margin-top: 5px

    nav
      ul
        float: left
        position: absolute
        top: 10px
        right: 120px

        li
          opacity: 0.7
          color: #111

          -o-transition: color .25s ease-in-out
          -moz-transition: color .25s ease-in-out
          -webkit-transition: color .25s ease-in-out
          transition: color .25s ease-in-out

          float: left
          margin: 10px 10px
          padding: 10px 10px

          &:hover
            //opacity: 1
            cursor: pointer
            color: rgba(63,167,87,1)

      #social
        float: left
        position: absolute
        right: 40px
        top: 30px

        a
          color: #111
          opacity: 0.7

          -o-transition: color .25s ease-in-out
          -moz-transition: color .25s ease-in-out
          -webkit-transition: color .25s ease-in-out
          transition: color .25s ease-in-out

          margin: 5px
          font-size: 1.5em

          &:hover
            //opacity: 1
            cursor: pointer
            color: rgba(63,167,87,1)

  #mission-statement
    display: inline-block
    background-image: url('/images/mission-statement.png')
    background-repeat: no-repeat
    background-position: bottom center
    margin: 0 auto
    padding-left: 150px
    padding-top: 50px
    margin-bottom: 50px
    width: 1200px
    height: 200px

  #welcome-image
    display: inline-block
    background-image: url('/images/header-banner.png')
    background-repeat: no-repeat
    background-position: bottom center
    margin: 0 auto
    padding-left: 150px
    padding-top: 50px
    width: 1200px
    height: 200px

    h1
      position: absolute
      color: #111111
      background-color: #FFF
      margin: 100px auto
      right: 50px
      text-align: center
      width: 500px
      padding: 10px

      -webkit-box-shadow: 1px 1px 5px #888
      -moz-box-shadow: 1px 1px 5px #888
      -o-box-shadow: 1px 1px 5px #888
      box-shadow: 1px 1px 5px #888

      border: 1px solid #333

  .container
    width: 1000px
    margin: 10px auto
    background-color: rgb(17,17,22)
    opacity: 0.7
    border: 1px solid rgb(37, 37, 52)

    h1, h2, h3
      color: #BBB
      text-align: left
      margin-left: 100px
      padding-bottom: 10px
      font-weight: 100
      letter-spacing: 0.12em

      -webkit-text-shadow: -2px 2px #111
      -moz-text-shadow: -2px 2px #111
      -o-text-shadow: -2px 2px #111
      text-shadow: -2px 2px #111

    h2
      font-size: 3.0em

    p
      margin: 50px 100px

  .quote
    width: 600px
    margin: 50px auto
    padding-right: 30px

    blockquote
      font-family: Georgia, serif
      font-size: 18px
      font-style: italic
      width: 500px
      margin: 0.25em 0
      padding: 0.25em 40px
      line-height: 1.45
      position: relative
      color: #AAA

      &:before
        display: block
        content: "\201C"
        font-size: 80px
        position: absolute
        left: -20px
        top: -20px
        color: #7a7a7a

      cite
        color: #999999
        font-size: 14px
        display: block
        margin-top: 5px
        text-align: right

        &:before
          content: "\2014 \2009";

  section
    h1
      color: #BBB
      text-align: left
      width: 1000px
      margin: 0 auto
      padding-top: 10px
      padding-bottom: 10px

      -webkit-text-shadow: -2px 2px #111
      -moz-text-shadow: -2px 2px #111
      -o-text-shadow: -2px 2px #111
      text-shadow: -2px 2px #111

  p
    color: #DDD

    font-weight: 100
    font-size: 1.3em
    letter-spacing: 0.15em

  #about-section
    background: url('/images/navy_blue.png') repeat
    margin-top: -5px
    padding: 100px
    padding-bottom: 200px

    .outer-box
      width: 1100px
      margin: 30px auto

      .box
        background-color: rgb(17,17,22)
        opacity: 0.7
        border: 1px solid rgb(37, 37, 52)
        width: 500px
        margin: 10px 20px
        p
          margin: 30px

  #schedule-section
    //background-color: #FFAA00
    //height: 1000px

  #contact-section
    //background-color: #FF4119
    //height: 1000px

  #bottom-stats
    display: inline-block
    background-image: url('/images/bottom-stats.png')
    background-repeat: no-repeat
    background-position: bottom center
    margin: 0 auto
    padding-left: 150px
    padding-top: 50px
    width: 1200px
    height: 300px

  #signup-error
    width: 1200px
    margin: auto
    text-align: center
    padding-bottom: 5px

  #signup-form
    margin: 50px auto 50px

    width: 870px
    opacity: 0.9
    background-color: #46B252

    -webkit-border-radius: 5px
    -moz-border-radius: 5px
    -o-border-radius: 5px
    border-radius: 5px


    p
      width: 400px
      float: left
      margin: 10px 20px
      padding-right: 20px
      border-right: 1px solid #444

    button
      margin: 10px 10px 12px
      width: 100px
      height: 40px
      background-color: #222

    input
      margin: 15px 10px
      width: 245px
      height: 20px
      font-size: 1.1em

  footer
    background-color: #111
    height: 300px

  .clear
    clear: both

  .error
    color: red

  .success
    color: green



