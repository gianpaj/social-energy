@font-face {
  font-family: 'Museo';
  src: url('/fonts/Museo300-Regular-webfont.eot');
  src: url('/fonts/Museo300-Regular-webfont.eot#iefix') format('embedded-opentype'),
       url('/fonts/Museo300-Regular-webfont.woff') format('woff'),
       url('/fonts/Museo300-Regular-webfont.ttf') format('truetype'),
       url('/fonts/Museo300-Regular-webfont.svg#webfont') format('svg');
}

h1
  color: white
  font-weight: 100
  font-size: 4em

h1,h2,h3,h4,h5,p
  font-family: "Museo", "Helvetica Neue", Helvetica, Arial, sans-serif

body

  header
    margin: 0 auto
    height: 60px
    background-color: #FFF
    border-top: 5px solid rgba(63,167,87,1)
    border-bottom: 2px solid #777
    position: fixed
    width: 100%
    z-index: 999

    nav
      ul
        float: left
        position: absolute
        top: 10px
        right: 120px

        li
          opacity: 0.7
          color: #111

          -o-transition: color .25s ease-in-out
          -moz-transition: color .25s ease-in-out
          -webkit-transition: color .25s ease-in-out
          transition: color .25s ease-in-out

          float: left
          margin: 5px 10px
          padding: 5px 10px

          &:hover
            //opacity: 1
            cursor: pointer
            color: rgba(63,167,87,1)

      #social
        float: left
        position: absolute
        right: 40px
        top: 19px

        a
          color: #111
          opacity: 0.7

          -o-transition: color .25s ease-in-out
          -moz-transition: color .25s ease-in-out
          -webkit-transition: color .25s ease-in-out
          transition: color .25s ease-in-out

          margin: 5px
          font-size: 1.5em

          &:hover
            //opacity: 1
            cursor: pointer
            color: rgba(63,167,87,1)

  #welcome-image
    display: inline-block
    background-image: url('/images/header-img.jpg')
    background-repeat: no-repeat
    background-position: top center
    width: 100%
    height: 700px
    margin-bottom: 0
    margin-top: 0
    overflow:hidden


    h1
      position: absolute
      color: #111111
      //background-color: #FFB300
      background-color: #FFF
      margin: 100px auto
      right: 50px
      text-align: center
      width: 500px
      padding: 10px

      -webkit-box-shadow: 1px 1px 5px #888
      -moz-box-shadow: 1px 1px 5px #888
      -o-box-shadow: 1px 1px 5px #888
      box-shadow: 1px 1px 5px #888

      border: 1px solid #333

  .container
    width: 1000px
    margin: 10px auto
    background-color: rgb(17,17,22)
    opacity: 0.7
    border: 1px solid rgb(37, 37, 52)

    h1, h2, h3
      color: #BBB
      text-align: left
      margin-left: 100px
      padding-bottom: 10px
      font-weight: 100
      letter-spacing: 0.12em

      -webkit-text-shadow: -2px 2px #111
      -moz-text-shadow: -2px 2px #111
      -o-text-shadow: -2px 2px #111
      text-shadow: -2px 2px #111

    h2
      font-size: 3.0em

    .box
      float: left
      width: 440px
      margin: auto 25px

      h3
        color: #AAA
        font-weight: 100
        margin: 30px

  .quote
    width: 600px
    margin: 50px auto
    padding-right: 30px

    blockquote
      font-family: Georgia, serif
      font-size: 18px
      font-style: italic
      width: 500px
      margin: 0.25em 0
      padding: 0.25em 40px
      line-height: 1.45
      position: relative
      color: #AAA

      &:before
        display: block
        content: "\201C"
        font-size: 80px
        position: absolute
        left: -20px
        top: -20px
        color: #7a7a7a

      cite
        color: #999999
        font-size: 14px
        display: block
        margin-top: 5px
        text-align: right

        &:before
          content: "\2014 \2009";

  section
    h1
      color: #BBB
      text-align: center
      width: 600px
      margin: -10px auto 50px auto
      padding-bottom: 10px

      -webkit-text-shadow: -2px 2px #111
      -moz-text-shadow: -2px 2px #111
      -o-text-shadow: -2px 2px #111
      text-shadow: -2px 2px #111



  p
    color: #DDD
    margin: 50px 100px
    font-weight: 100
    font-size: 1.3em
    letter-spacing: 0.15em

  #about-section
    background: url('/images/navy_blue.png') repeat
    height: 1000px
    margin-top: -5px
    padding: 100px

    .box
      background-color: rgb(17,17,22)
      opacity: 0.7
      border: 1px solid rgb(37, 37, 52)

  #schedule-section
    background-color: #FFAA00
    height: 1000px

  #contact-section
    background-color: #FF4119
    height: 1000px

  footer
    background-color: #111
    height: 300px


